# ====================================
# Slack Emoji Reaction Bot Configuration
# ====================================
# Copy this file to .env and fill in your actual values

# -------------------------------------
# Required Configuration
# -------------------------------------

# Slack Bot Configuration (Required)
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_APP_TOKEN=xapp-your-app-token-here

# OpenAI Configuration (Required)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Database Configuration (Required)
DATABASE_URL=postgresql://user:pass@localhost:5432/emoji_bot

# -------------------------------------
# Application Configuration
# -------------------------------------

# Environment: development, production, testing
ENVIRONMENT=development

# Optional: Path to JSON/YAML config file for additional settings
# CONFIG_FILE=/path/to/config/settings.json

# -------------------------------------
# Slack Configuration (Optional)
# -------------------------------------

# Enable Socket Mode (default: true)
SLACK_SOCKET_MODE=true

# Request timeout in seconds (default: 30)
SLACK_REQUEST_TIMEOUT=30

# Maximum retry attempts (default: 3)
SLACK_MAX_RETRIES=3

# -------------------------------------
# OpenAI Configuration (Optional)
# -------------------------------------

# Embedding model (default: text-embedding-3-small)
OPENAI_MODEL=text-embedding-3-small

# Embedding dimensions (default: 1536)
OPENAI_EMBEDDING_DIM=1536

# Request timeout in seconds (default: 60)
OPENAI_REQUEST_TIMEOUT=60

# Maximum retry attempts (default: 3)
OPENAI_MAX_RETRIES=3

# Base delay for exponential backoff (default: 1.0)
OPENAI_BASE_DELAY=1.0

# -------------------------------------
# Database Configuration (Optional)
# -------------------------------------

# Connection pool size (default: 10)
DB_POOL_SIZE=10

# Minimum pool size (default: 2)
DB_MIN_POOL_SIZE=2

# Maximum pool size (default: 20)
DB_MAX_POOL_SIZE=20

# Connection timeout in seconds (default: 30)
DB_CONNECTION_TIMEOUT=30

# Command timeout in seconds (default: 60)
DB_COMMAND_TIMEOUT=60

# -------------------------------------
# Emoji Service Configuration (Optional)
# -------------------------------------

# Default number of emoji reactions (default: 3)
DEFAULT_REACTION_COUNT=3

# Enable emoji cache (default: true)
EMOJI_CACHE_ENABLED=true

# Cache TTL in seconds (default: 3600)
EMOJI_CACHE_TTL=3600

# Similarity threshold for emoji matching (default: 0.7)
EMOJI_SIMILARITY_THRESHOLD=0.7

# Maximum concurrent reactions (default: 10)
MAX_CONCURRENT_REACTIONS=10

# -------------------------------------
# Logging Configuration (Optional)
# -------------------------------------

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
LOG_LEVEL=INFO

# Log format: human, json (default: human)
LOG_FORMAT=human

# Use colors in console output (default: true)
LOG_USE_COLORS=true

# Log file path (optional)
# LOG_FILE=/var/log/slack-emoji-bot.log

# Maximum log file size in bytes (default: 10485760 = 10MB)
LOG_MAX_FILE_SIZE=10485760

# Number of backup files to keep (default: 5)
LOG_BACKUP_COUNT=5

# -------------------------------------
# Monitoring Configuration (Optional)
# -------------------------------------

# Enable monitoring and metrics (default: true)
MONITORING_ENABLED=true

# Metrics export interval in seconds (default: 60)
METRICS_EXPORT_INTERVAL=60

# Metrics server port (default: 9090)
METRICS_PORT=9090

# Health check interval in seconds (default: 30)
HEALTH_CHECK_INTERVAL=30